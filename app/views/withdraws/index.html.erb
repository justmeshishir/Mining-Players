<!DOCTYPE html>
<html>
<head>
  <title>Mining PLayers</title>
</head>
<body>
  <button type="button" class="btn btn-primary btn-lg btn_idea pull-right" data-toggle="modal" data-target="#myModal" pull-center>
  Withdraws
</button>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <% if @method == "aud" %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <h4 class="modal-title" id="myModalLabel">Add your Bank</h4>
      </div>
      
      <div class="modal-body">
       <%= simple_form_for Bank.new do |f| %>
        <%= f.input :name %>
        <%= f.input :bsb %>
        <%= f.input :account_number %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit' %>
      </div>
      <% end %>
      <% else %>
       <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <h4 class="modal-title" id="myModalLabel">Add your Wallet</h4>
      </div>
      <div class="modal-body">
       <%= simple_form_for Wallet.new do |f| %>
        <%= f.input :address %>
        <%= f.input :date %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
      <% end %>
      <% end %> 

    </div>
  </div>
</div>
<br />
<br />
<!-- Tab panes -->

<div id="exTab2" class="container"> 
<ul class="nav nav-tabs">

      <li class="active">
        <a  href="#4" data-toggle="tab">Banks</a>
      </li>
      <li><a href="#5" data-toggle="tab">Wallets</a>
      </li>
     
    </ul>

      <div class="tab-content ">
          <div class="tab-pane active" id="4">
      <% if @banks.blank? %>
        <h4>You have not sent any balance yet.</h4>
      <% else %>
        <table class="table">
          <thead>
            <th>Name</th>
            <th>Bsb</th>
            <th>Account number</th>
          </thead>
          <% @banks.each do |bank| %>
            <tr>
              <td>
                <%= bank.name %>
              </td>
              <td>
                <%= bank.bsb %>
              </td>
              <td> 
                <%= bank.account_number %>
              </td>
            </tr>
          <% end %>

        </table>
        <% end %>
        <div class="text-center">
    <%= will_paginate @banks %>
  </div> 
      </div>
        <div class="tab-pane " id="5">
      <% if @wallets.blank? %>
        <h4>You have not received any balance yet.</h4>
      <% else %>
        <table class="table">
          <thead>
            <th>Address</th>
            <th>Date</th>
          </thead>
          <% @wallets.each do |wallet| %>
            <tr>
              <td>
                <%= wallet.address %>
              </td>
              <td>
                <%= wallet.date %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>  
      <div class="text-center">
    <%= will_paginate @wallets %>
  </div>   
        </div>
      </div>
  </div>

</body>