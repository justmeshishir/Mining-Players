<div class="container" style="margin-top: 100px">
  <button type="button" class="btn btn-primary btn-lg btn_idea pull-right" data-toggle="modal" data-target="#myModal" pull-center="pull-center">
    <span class="glyphicon glyphicon-plus"></span>
    &nbsp;Withdraw
  </button>

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div style="margin-top:10px;padding:10px;">
            <h4 class="modal-title" id="myModalLabel">Add your Bank</h4>
            <br />
            <label>Withdraw Method: </label>
            <select id="withdraw_method" onchange="withdraw_method()" class="form-control" style="width:50%;">
              <option value="bank">Bank</option>
              <option value="eth">ETH</option>
            </select>
          </div>

          <div class="modal-header"></div>
          <div class="form-bank">
          <div class="modal-body">
            <%= simple_form_for Bank.new do |f| %>
            <%= f.input :name %>
            <%= f.input :bsb %>
            <%= f.input :account_number %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit 'Submit' , class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div class="form-wallet" style="display: none;">
        <div class="modal-body">
          <%= simple_form_for Wallet.new do |f| %>
          <%= f.input :address %>
          <%= f.input :date %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
<br/>
<br/>
<div>
  <p>
    <b>Total in Bank:</b>
    $
    <%= @total_bank_withdraw %></p>
  <p>
    <b>Total in Wallet:</b>
    <%= @total_wallet_withdraw %>
    ETH</p>
</div>
<!-- Tab panes -->

    <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Bank</a></li>
    <li><a data-toggle="tab" href="#menu1">Wallet</a></li>
  </ul>

  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <% if @banks.blank? %>
        <h4>You have not withdrawn any balance on your bank yet.</h4>
      <% else %>
        <table class="table">
          <thead>
            <th>Name</th>
            <th>Bsb</th>
            <th>Account number</th>
            <th>Confirm</th>
          </thead>
          <% @banks.each do |bank| %>
            <tr>
              <td>
                <%= bank.name %>
              </td>
              <td>
                <%= bank.bsb %>
              </td>
              <td>
                <%= bank.account_number %>
              </td>
              <td>
                <%= (bank.confirm?) ? "Confirmed" : "Not Confirmed" %>
              </td>
            </tr>
          <% end %>
        </table>
        <div class="text-center">
          <%= will_paginate @banks %>
        </div>
        <% end %>
    </div>
    <div id="menu1" class="tab-pane fade">
      <% if @wallets.blank? %>
        <h4>You have not withdrawn any amount in crypto currency yet.</h4>
      <% else %>
        <table class="table">
          <thead>
            <th>Address</th>
            <th>Date</th>
            <th>Confirm</th>
          </thead>
          <% @wallets.each do |wallet| %>
            <tr>
              <td>
                <%= wallet.address %>
              </td>
              <td>
                <%= wallet.date %>
              </td>
              <td>
                <%= (wallet.confirm?) ? "Confirmed" : "Not Confirmed" %>
              </td>
            </tr>
          <% end %>
        </table>
        <div class="text-center">
          <%= will_paginate @wallets %>
        </div>
      <% end %>
    </div>
  </div>
  </div>
  <script>
    function withdraw_method(){
      var method = $('#withdraw_method').val();
      if(method == 'bank'){
        $('.form-bank').show();
        $('.form-wallet').hide();
      }else{
        $('.form-wallet').show();
        $('.form-bank').hide();
      }
    }
  </script>
