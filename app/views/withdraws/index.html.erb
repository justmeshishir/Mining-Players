<!DOCTYPE html>
<html>
<head>
  <title>Mining PLayers</title>
</head>
<body>
  <button type="button" class="btn btn-primary btn-lg btn_idea pull-right" data-toggle="modal" data-target="#myModal" pull-center>
  <span class="glyphicon glyphicon-plus"></span> &nbsp;Withdraw
</button>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <% if @method == "aud" %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <h4 class="modal-title" id="myModalLabel">Add your Bank</h4>
      </div>

      <div class="modal-body">
       <%= simple_form_for Bank.new do |f| %>
        <%= f.input :name %>
        <%= f.input :bsb %>
        <%= f.input :account_number %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit' , class: 'btn btn-primary' %>
      </div>
      <% end %>
      <% else %>
       <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
        <h4 class="modal-title" id="myModalLabel">Add your Wallet</h4>
      </div>
      <div class="modal-body">
       <%= simple_form_for Wallet.new do |f| %>
        <%= f.input :address %>
        <%= f.input :date %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
      <% end %>
      <% end %>

    </div>
  </div>
</div>
<br />
<br />
<!-- Tab panes -->

<div id="exTab2" class="container">
<ul class="nav nav-tabs">
      <% if @method == "aud" %>
      <li class="active">
        <a  href="#4" data-toggle="tab">Banks</a>
      </li>

      <li><a href="#5" data-toggle="tab">Wallets</a>
      </li>
      <% else %>
      <li >
        <a  href="#4" data-toggle="tab">Banks</a>
      </li>

      <li class="active"><a href="#5" data-toggle="tab">Wallets</a>
      </li>
      <% end %>

    </ul>

      <div class="tab-content ">
        <% if @method == "aud" %>
          <div class="tab-pane active" id="4">
           <% else %>
          <div class="tab-pane" id="4">
            <% end %>

      <% if @banks.blank? %>
        <h4>You have not withdrawn any balance on your bank yet.</h4>
      <% else %>
        <table class="table">
          <thead>
            <th>Name</th>
            <th>Bsb</th>
            <th>Account number</th>
          </thead>
          <% @banks.each do |bank| %>
            <tr>
              <td>
                <%= bank.name %>
              </td>
              <td>
                <%= bank.bsb %>
              </td>
              <td>
                <%= bank.account_number %>
              </td>
            </tr>
          <% end %>

        </table>
        <% end %>
        <div class="text-center">
    <%= will_paginate @banks %>
  </div>
      </div>
      <% if @method != "aud" %>
        <div class="tab-pane active" id="5">
         <% else %>
          <div class="tab-pane " id="5">
          <% end %>
      <% if @wallets.blank? %>
        <h4>You have not withdrawn any amount in crypto currency yet.</h4>
      <% else %>
        <table class="table">
          <thead>
            <th>Address</th>
            <th>Date</th>
          </thead>
          <% @wallets.each do |wallet| %>
            <tr>
              <td>
                <%= wallet.address %>
              </td>
              <td>
                <%= wallet.date %>
              </td>
            </tr>
          <% end %>
        </table>

      <% end %>
      <div class="text-center">
    <%= will_paginate @wallets %>
  </div>
        </div>
      </div>
  </div>

</body>
